<h2 class="card-title h3 mb-2"><%- page.title %></h2>
<div class="post-header-info">
    <p class="post-header-info-left text-gray">
        <img class="author-thumb" src="<%= url_for(theme.img.avatar) %>">
        <span><%= date(page.date, config.date_format) %></span>
        <% if (page.categories && page.categories.length) { %>
            <span class="suka-devide-dot"></span>
            <%- list_categories(page.categories, {
                show_count: false,
                separator: '<span class="suka-devide-dot"></span>',
                style: 'none'
            }) %>
        <% } %>
        <% if(theme.busuanzi.enable === true) { %>
            <% if(theme.busuanzi.post_pv.enable === true) { %>
                <!-- Busuanzi Post Views -->
                <span id="busuanzi_container_page_pv" hidden>
                    <span class="suka-devide-dot"></span>
                    <span><%- theme.busuanzi.site_pv.before %></span>
                    <span id="busuanzi_value_page_pv"></span>
                    <span><%- theme.busuanzi.site_pv.after %></span>
                </span>
            <% } %>
        <% } %>
    </p>
    <div class="post-header-info-right">
        <% if (theme.post.share === true) { %>
            <%- partial('_partial/menu/post-share') %>
        <% } %>
    </div>
</div>