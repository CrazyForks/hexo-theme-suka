<!-- spectre.css -->
<% if (theme.vendors.spectre.spectre_css) { %>
    <link rel="stylesheet" href="<%= theme.vendors.spectre.spectre_css %>">
<% } else { %>
    <link rel="stylesheet" href="<%- url_for('lib/spectre/spectre.min.css') %>">
<% } %>
<!-- spectre-exp.css -->
<% if (theme.vendors.spectre.spectre_exp_css) { %>
    <link rel="stylesheet" href="<%= theme.vendors.spectre.spectre_exp_css %>">
<% } else { %>
    <link rel="stylesheet" href="<%- url_for('lib/spectre/spectre-exp.min.css') %>">
<% } %>
<!-- spectre-icons.css -->
<% if (theme.vendors.spectre.spectre_icons_css) { %>
    <link rel="stylesheet" href="<%= theme.vendors.spectre.spectre_icons_css %>">
<% } else { %>
    <link rel="stylesheet" href="<%- url_for('lib/spectre/spectre-icons.css') %>">
<% } %>

<%- partial('_partial/head/config_style', {}, {cache: true}) %>

<!-- style.css -->
<% if (theme.vendors.suka.style_css) { %>
    <link rel="stylesheet" href="<%= theme.vendors.suka.style_css %>">
<% } else { %>
    <link rel="stylesheet" href="<%- url_for('css/style.min.css') %>">
<% } %>

<!-- prism.css -->
<% if( (is_post()) ) { %>
    <!-- prism.line_number -->
    <% if (config.suka_theme.prism.line_number === true) { %>
        <% if (theme.vendors.prism.line_number) { %>
            <link rel="stylesheet" href="<%= theme.vendors.prism.line_number %>">
        <% } else { %>
            <link rel="stylesheet" href="<%- url_for('lib/prism/prism-line-numbers.min.css') %>">
        <% } %>
    <% } %>
    <!-- prism.theme -->
    <% if (theme.vendors.prism.theme) { %>
        <link rel="stylesheet" href="<%= theme.vendors.prism.theme %>">
    <% } else { %>
        <link rel="stylesheet" href="<%- url_for('lib/prism/prism-' + config.suka_theme.prism.theme + '.min.css') %>">
    <% } %>
<% } %>