<div class="card-header">
    <a class="card-title h5" href="<%= url_for(post.path) %>"><%- post.title %></a>
</div>
<div class="card-body">
    <% if(post.excerpt) {%>
        <%- strip_html(post.excerpt) %>
    <% } else { %>
        <%- strip_html(truncate(post.content,{length: theme.post.entry_excerpt })) %>
    <% } %><a href="<%= url_for(post.path) %>"><%= __('post.continue') %></a>
</div>
<div class="card-footer">
    <!-- Date & Category -->
    <div class="post-entry-info text-gray">
        <img class="author-thumb" src="<%= url_for(theme.img.avatar) %>">
        <time><%= date(post.date, config.date_format) %></time>
        <% if (post.categories && post.categories.length) { %>
            <span class="suka-devide-dot"></span>
            <%- list_categories(post.categories, {
                show_count: false,
                separator: '<span class="suka-devide-dot"></span>',
                style: 'none'
            }) %>
        <% } %>
    </div>
</div>