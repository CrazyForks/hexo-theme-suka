<article class="post-entry card">
    <div class="container px-0">
        <div class="columns col-gapless">
            <% if (post.thumbnail) { %>
                <div class="column column-thumbnail col-4 col-lg-12">
                    <a href="<%= url_for(post.path) %>" class="post-thumbnail lazyload" data-src="<%= post.thumbnail %>"></a>
                </div>
                <div class="column column-body col-8 col-lg-12">
                    <%- partial('_partial/post-entry-content') %>
                </div>
            <% } else { %>
                <div class="column col-12">
                    <%- partial('_partial/post-entry-content') %>
                </div>
            <% } %>
        </div>
    </div>

</article>
