<article class="post-entry card">
    <div class="container px-0">
        <div class="columns col-gapless">
            <% if (post.thumbnail) { %>
                <div class="column column-thumbnail col-4 col-lg-12">
                    <a href="<%= url_for(post.path) %>"><div class="post-thumbnail lazyload" data-src="<%= post.thumbnail %>"></div></a>
                </div>
                <div class="column column-body col-8 col-lg-12">
                    <div class="card-header">
                        <a class="card-title h5" href="<%= url_for(post.path) %>"><%= post.title %></a>
                    </div>
                    <div class="card-body">
                        <% if(post.excerpt) {%>
                            <%- strip_html(post.excerpt) %>
                        <% } else { %>
                            <%- strip_html(truncate(post.content,{length: theme.post.entry_excerpt })) %>
                        <% } %><a href="<%= url_for(post.path) %>"><%= __('post.continue') %></a>
                    </div>
                    <div class="card-footer">
                        <!-- Date & Category -->
                        <div class="post-entry-info text-gray">
                            <img class="author-thumb" src="<%= url_for(theme.img.avatar) %>">
                            <time><%= date(post.date, config.date_format) %></time>
                            <% if (post.categories && post.categories.length) { %>
                                    <span class="suka-devide-dot"></span>
                                    <%- list_categories(post.categories, {
                                        show_count: false,
                                        style: 'none'
                            }) %><% } %>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="column col-12">
                    <div class="card-header">
                        <a class="card-title h5" href="<%= url_for(post.path) %>"><%= post.title %></a>
                    </div>
                    <div class="card-body">
                        <% if(post.excerpt) {%>
                            <%- strip_html(post.excerpt) %>
                        <% } else { %>
                            <%- strip_html(truncate(post.content,{length: theme.post.entry_excerpt })) %>
                        <% } %>
                        <a href="<%= url_for(post.path) %>"><%= __('post.continue') %></a>
                    </div>
                    <div class="card-footer">
                        <!-- Date & Category -->
                        <div class="post-entry-info text-gray">
                            <img class="author-thumb" src="<%= url_for(theme.img.avatar) %>">
                            <time><%= date(post.date, config.date_format) %></time>
                            <% if (post.categories && post.categories.length) { %>
                                    <span class="suka-devide-dot"></span>
                                    <%- list_categories(post.categories, {
                                        show_count: false,
                                        style: 'none'
                            }) %><% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

</article>
