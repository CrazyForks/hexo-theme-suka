<article class="post-entry card">
    <div class="container px-0">
        <div class="columns col-gapless">
            <% if (post.thumbnail) { %>
                <div class="column column-thumbnail col-4 col-md-12">
                    <a href="<%= url_for(post.path) %>"><div class="post-thumbnail lazyload" data-src="<%= post.thumbnail %>"></div></a>
                </div>
                <div class="column column-body col-8 col-md-12">
                    <div class="card-header">
                        <a class="card-title h5" href="<%= url_for(post.path) %>"><%= post.title %></a>
                        <!-- Date & Category -->
                        <div class="card-subtitle text-gray"><%= date(post.date, 'YYYY-MM-DD') %>&nbsp;·&nbsp;
                        <% if (post.categories && post.categories.length) { %>
                            <%- list_categories(post.categories, {
                                show_count: false,
                                style: 'none'
                            }) %>
                        <% } %>
                        </div>
                    </div>
                    <div class="card-body">
                        <% if(post.excerpt) {%>
                            <%- strip_html(post.excerpt) %>
                        <% } else { %>
                            <%- strip_html(truncate(post.content,{length: theme.post.entry_excerpt })) %>
                        <% } %><a href="<%= url_for(post.path) %>"><%= __('post.continue') %></a>
                    </div>
                </div>
            <% } else { %>
                <div class="column col-12">
                    <div class="card-header">
                        <a class="card-title h5" href="<%= url_for(post.path) %>"><%= post.title %></a>
                        <!-- Date & Category -->
                        <div class="card-subtitle text-gray"><%= date(post.date, 'YYYY-MM-DD') + ' · ' %>
                        <% if (post.categories && post.categories.length) { %>
                            <%- list_categories(post.categories, {
                                show_count: false,
                                style: 'none'
                            }) %>
                        <% } %>
                        </div>
                    </div>
                    <div class="card-body">
                        <% if(post.excerpt) {%>
                            <%- strip_html(post.excerpt) %>
                        <% } else { %>
                            <%- strip_html(truncate(post.content,{length: theme.post.entry_excerpt })) %>
                        <% } %>
                        <a href="<%= url_for(post.path) %>"><%= __('post.continue') %></a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

</article>
