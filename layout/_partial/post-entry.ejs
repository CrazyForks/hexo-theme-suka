<article class="post-entry card">
    <% if (post.thumbnail) { %><div class="post-thumbnail lazyload" data-src="<%= post.thumbnail %>"></div><% } %>
    <div class="card-header">
        <div class="card-title h5"><%= post.title %></div>
        <div class="card-subtitle text-gray"><%= date(post.date, 'YYYY-MM-DD') %>&nbsp;Â·
        <% if (post.categories && post.categories.length) { %>
            <!-- Category -->
            <%- list_categories(post.categories, {
                show_count: false,
                style: 'none'
            }) %>
    <% } %>
        </div>
    </div>
    <div class="card-body">
        <% if(post.excerpt) {%>
            <%- strip_html(post.excerpt) %>
        <% } else { %>
            <%- strip_html(truncate(post.content,{length: theme.post.entry_excerpt })) %>
        <% } %>
    </div>
    <div class="card-footer"></div>
</article>
